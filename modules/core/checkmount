# shellcheck shell=ksh

(($(id -u) != 0)) && exec su --mount-master -c "$(printf "%q " "$(readlink -f "$0")" "$@")"
ScriptDir=$(dirname "$0")
[[ -f "$ScriptDir/lib/ui.sh" ]] || {
    echo "错误: 未找到 $ScriptDir/lib/ui.sh" >&2
    exit 1
}
source "$ScriptDir/lib/ui.sh"

BasePath="/data/local/chroot"
DisplayCmd="${LINA_ENTRY:+$LINA_ENTRY $LINA_ACTION}"
DisplayCmd="${DisplayCmd:-${0##*/}}"

usage() {
    cat << EOF
检查 chroot 环境的文件系统挂载。

用法: $DisplayCmd <Name>

参数:
  Name    chroot 环境的名称
EOF
    exit 1
}

Name="$1"
[[ -z $Name ]] && {
    m1err "未提供名称。"
    usage 1
}
RootFs="$BasePath/$Name"
[[ -d $RootFs ]] || {
    m1err "目录 '$RootFs' 不存在。"
    exit 1
}

OVERALL_STATUS=1

check_mount() {
    local src="$1"
    local tgt="$2"

    if "$ScriptDir"/is-mounted "$src" "$tgt"; then
        m2green "已挂载: %s" "$tgt"
        OVERALL_STATUS=0
        return 0
    else
        m2blue "未挂载: %s" "$tgt"
        return 1
    fi
}

check_mount "/data/data/com.termux/files/usr/tmp" "$RootFs/tmp"
check_mount /dev "$RootFs/dev"
check_mount devpts "$RootFs/dev/pts"
check_mount tmpfs "$RootFs/dev/shm"
check_mount proc "$RootFs/proc"
check_mount sysfs "$RootFs/sys"
check_mount /sdcard "$RootFs/sdcard"

exit $OVERALL_STATUS
