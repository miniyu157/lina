# shellcheck shell=ksh

(($(id -u) != 0)) && exec su --mount-master -c "$(printf "%q " "$(readlink -f "$0")" "$@")"
ScriptDir=$(dirname "$0")
[[ -f "$ScriptDir/lib/ui.sh" ]] || {
    echo "错误: 未找到 $ScriptDir/lib/ui.sh" >&2
    exit 1
}
source "$ScriptDir/lib/ui.sh"

BasePath="/data/local/chroot"
DisplayCmd="${LINA_ENTRY:+$LINA_ENTRY $LINA_ACTION}"
DisplayCmd="${DisplayCmd:-${0##*/}}"

usage() {
    cat << EOF
安全终止 chroot 环境，包括清理进程并卸载挂载点。

用法:
  $DisplayCmd <Name>   终止指定名称的环境
  $DisplayCmd -a       终止所有环境

参数:
  Name    chroot 环境的名称

选项:
  -a      选择所有 chroot 环境
EOF
    exit 1
}

chroot_shutdown() {
    local target="$1"
    local rootfs="$BasePath/$target"

    [[ -d $rootfs ]] || {
        m1err "目录 '$rootfs' 不存在，跳过。"
        return 1
    }

    m1 "终止: $target ..."

    # 尝试杀死相关进程
    "$ScriptDir"/proc "$target" ka > /dev/null 2>&1

    # 卸载挂载点
    "$ScriptDir"/umount "$target" > /dev/null 2>&1
}

if [[ $1 == "-a" ]]; then
    [[ -n $2 ]] && {
        m1err "选项 -a 不能与名称共存。"
        usage
    }

    if [[ -d $BasePath ]]; then
        for dir in "$BasePath"/*; do
            if [[ -d $dir ]]; then
                chroot_shutdown "${dir##*/}"
            fi
        done
    else
        m1err "目录 '$BasePath' 不存在。"
        exit 1
    fi

elif [[ -n $1 ]]; then
    [[ $1 == -* ]] && usage

    Name="$1"
    RootFs="$BasePath/$Name"
    [[ -d $RootFs ]] || {
        m1err "目录 '$RootFs' 不存在。"
        exit 1
    }
    chroot_shutdown "$Name"
else
    usage
fi

Pfx="${LINA_ENTRY:+$LINA_ENTRY }"

echo ""
plain "提示信息:"
plain "  使用 '${Pfx}ps' 命令以确认"
plain "  此命令可能不可靠，应该手动确认环境是否完全清理。"
